{
  "type": "panel",
  "label": "Yamaha",
  "items": [
    {
      "type": "header",
      "label": "template adapter settings",
      "size": { "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12 }
    },
    {
      "type": "text",
      "label": "IP Address",
      "ref": "ip",
      "placeholder": "192.168.1.10",
      "help": "IP Address",
      "size": { "xs": 12, "sm": 12, "md": 6, "lg": 4, "xl": 4 }
    },
    {
      "type": "number",
      "label": "Poll Interval",
      "ref": "interval",
      "min": 0,
      "step": 1,
      "help": "Poll Interval",
      "default": 120,
      "size": { "xs": 12, "sm": 12, "md": 6, "lg": 4, "xl": 4 }
    },
    {
      "type": "header",
      "label": "Realtime Options",
      "size": { "xs": 12, "sm": 12, "md": 12, "lg": 12, "xl": 12 }
    },
    {
      "type": "checkbox",
      "label": "Use Realtime",
      "ref": "useRealtime",
      "default": true,
      "size": { "xs": 12, "sm": 12, "md": 6, "lg": 4, "xl": 4 }
    },
    {
      "type": "checkbox",
      "label": "refreshOnRealtime",
      "ref": "refreshOnRealtime",
      "default": true,
      "size": { "xs": 12, "sm": 12, "md": 6, "lg": 4, "xl": 4 }
    },
    {
      "type": "number",
      "label": "Ping interval",
      "ref": "realtimePing",
      "min": 0,
      "step": 1,
      "default": 0,
      "help": "Ping interval",
      "size": { "xs": 12, "sm": 12, "md": 6, "lg": 4, "xl": 4 }
    }
  ]
}